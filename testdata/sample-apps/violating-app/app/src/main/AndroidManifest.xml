<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.violating">

    <!-- DP001: SMS permission (dangerous) -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- DP002: Location permissions (dangerous) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- DP003: Camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- DP004: Contacts permission -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- DP005: Storage permission (deprecated) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- DP006: Call log permission -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <!-- DP007: Record audio permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- General permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Violating">

        <!-- MV001: Missing targetSdkVersion or low value -->
        <uses-sdk android:minSdkVersion="21" android:targetSdkVersion="33" />

        <!-- MC001: Exported activity without intent-filter protection -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MC001: Exported receiver without permission -->
        <receiver
            android:name=".SmsReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- MC001: Exported service without permission -->
        <service
            android:name=".DataService"
            android:exported="true" />

        <!-- Missing launcher activity check: secondary activity without launcher -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />

    </application>
</manifest>
